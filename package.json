{
  "name": "@anchorbrowser/library",
  "version": "0.0.1",
  "description": "Open-source library of browser automation templates for popular web apps. Actions, authentication flows, and metadata. Compatible with Playwright and Anchor SDK.",
  "type": "module",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "validate": "node scripts/validate-templates.mjs",
    "generate:exports": "node scripts/generate-exports.mjs",
    "build": "npm run validate && npm run generate:exports && tsdown",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "browser-automation",
    "playwright",
    "anchor",
    "templates",
    "web-automation"
  ],
  "author": "AnchorBrowser",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anchorbrowser/library.git"
  },
  "bugs": {
    "url": "https://github.com/anchorbrowser/library/issues"
  },
  "homepage": "https://github.com/anchorbrowser/library#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "anchorbrowser": "^0.12.1",
    "playwright": "^1.52.0",
    "playwright-core": "^1.52.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsdown": "0.20.0-beta.1",
    "typescript": "^5.4.0"
  }
}
