{
  "slug": "add-candidate",
  "name": "Add Candidate",
  "description": "Add a new candidate to Lever ATS.",
  "type": "tool",
  "file": "add-candidate.ts",
  "app": "lever",
  "inputSchema": [
    { "display_name": "name", "type": "string", "required": true, "description": "Candidate full name" },
    { "display_name": "email", "type": "string", "required": true, "description": "Email address" },
    { "display_name": "posting", "type": "string", "required": true, "description": "Job posting to apply for" },
    { "display_name": "origin", "type": "string", "required": false, "description": "Candidate origin/source" }
  ],
  "outputSchema": [
    { "display_name": "candidateId", "type": "string", "required": true, "description": "Created candidate ID" },
    { "display_name": "success", "type": "boolean", "required": true, "description": "Whether candidate was added" }
  ]
}
