{
  "slug": "add-candidate",
  "name": "Add Candidate",
  "description": "Add a new candidate to a job in Greenhouse.",
  "type": "tool",
  "file": "add-candidate.ts",
  "app": "greenhouse",
  "inputSchema": [
    { "displayName": "firstName", "type": "string", "required": true, "description": "Candidate first name" },
    { "displayName": "lastName", "type": "string", "required": true, "description": "Candidate last name" },
    { "displayName": "email", "type": "string", "required": true, "description": "Email address" },
    { "displayName": "jobTitle", "type": "string", "required": true, "description": "Job title to apply for" },
    { "displayName": "source", "type": "string", "required": false, "description": "Candidate source", "defaultValue": "Referral" }
  ],
  "outputSchema": [
    { "displayName": "candidateId", "type": "string", "required": true, "description": "Created candidate ID" },
    { "displayName": "success", "type": "boolean", "required": true, "description": "Whether candidate was added" }
  ]
}
