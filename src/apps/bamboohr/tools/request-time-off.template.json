{
  "slug": "request-time-off",
  "name": "Request Time Off",
  "description": "Submit a time off request in BambooHR.",
  "type": "tool",
  "file": "request-time-off.ts",
  "app": "bamboohr",
  "inputSchema": [
    { "displayName": "startDate", "type": "date", "required": true, "description": "Start date of time off" },
    { "displayName": "endDate", "type": "date", "required": true, "description": "End date of time off" },
    { "displayName": "timeOffType", "type": "string", "required": true, "description": "Type of time off (Vacation, Sick, etc.)" },
    { "displayName": "notes", "type": "string", "required": false, "description": "Additional notes" }
  ],
  "outputSchema": [
    { "displayName": "requestId", "type": "string", "required": true, "description": "Time off request ID" },
    { "displayName": "success", "type": "boolean", "required": true, "description": "Whether request was submitted" }
  ]
}
