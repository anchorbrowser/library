{
  "slug": "download-lab-pdfs",
  "name": "Download Lab PDFs",
  "description": "Download lab result PDFs for patient batches from LabCorp Beacon.",
  "type": "tool",
  "file": "download-lab-pdfs.ts",
  "app": "labcorp-beacon",
  "inputSchema": [
    {
      "display_name": "patientIds",
      "type": "string",
      "required": true,
      "description": "Comma-separated patient IDs"
    },
    {
      "display_name": "dateFrom",
      "type": "date",
      "required": false,
      "description": "Start date filter"
    },
    {
      "display_name": "dateTo",
      "type": "date",
      "required": false,
      "description": "End date filter"
    }
  ],
  "outputSchema": [
    {
      "display_name": "filePath",
      "type": "string",
      "required": true,
      "description": "Path to downloaded PDFs"
    },
    {
      "display_name": "downloadCount",
      "type": "number",
      "required": true,
      "description": "Number of PDFs downloaded"
    },
    {
      "display_name": "success",
      "type": "boolean",
      "required": true,
      "description": "Whether download completed"
    }
  ]
}
